# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
insert_final_newline = true
max_line_length = 120
trim_trailing_whitespace = true

# Markdown files
[*.md]
insert_final_newline = false
max_line_length = off
trim_trailing_whitespace = false
